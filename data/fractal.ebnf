(* This is the Grammar for the programming language fractal. *)

program
    : funcDef* EOF
    ;

funcDef
    : 'fn' id '(' params ')' [':' type] '{' statement* '}'
    ;

params
    : (id ':' type (',' id ':' type)*)?
    ;

statement
    : 'return' expr ';'
    ;

expr
    : term
    | expr '+' term
    | expr '-' term
    ;

term
    : factor
    | term '*' factor
    | term '/' factor
    ;

factor
    : id
    | int
    | float
    | '(' expr ')'
    ;

id 
    : [a-zA-Z_][a-zA-Z0-9_]*
    ;

int
    : [0-9]+
    ;

float
    : [0-9]+\.[0-9]+
    ;

string
    : '"' [^"]* '"'
    ;

type
    : 'int'
    | 'float'
    | 'str'
    ;
